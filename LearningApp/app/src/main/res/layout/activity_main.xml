<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/EditText1" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
              android:layout_marginTop="137dp"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/EditText2"
              android:inputType="numberDecimal"
              android:layout_alignParentStart="true"
              android:layout_alignParentTop="true" android:layout_marginTop="261dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="misto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignStart="@+id/textView5" android:layout_alignParentTop="true"
            android:layout_marginTop="98dp"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:text="uložit"
            android:layout_alignParentBottom="true" android:layout_marginBottom="272dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:layout_centerHorizontal="true"/>
    <TextView
            android:text="delka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_marginTop="209dp" android:layout_alignParentStart="true" android:layout_marginStart="43dp"/>
    <TextView
            android:text="Formulář "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginTop="18dp"
            android:id="@+id/textView6"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:layout_alignEnd="@+id/button"
            android:textColor="@android:color/holo_orange_light"/>


</RelativeLayout>