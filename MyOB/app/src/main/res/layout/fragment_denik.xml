<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity_denik">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Tréninkový deník"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="33dp"
                    tools:layout_editor_absoluteX="61dp"
                    android:id="@+id/textView_headline"

                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_orange_dark"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_denik"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/denikTableLayout">

                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView
                            android:text="datum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView9"
                            android:textAlignment="center"/>
                    <TextView
                            android:text="čas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView3"/>
                    <TextView
                            android:text="délka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView6"/>
                    <TextView
                            android:text="místo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView7"/>
                    <TextView
                            android:text="tempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView8"/>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView
                            android:text="12.4."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView10"
                    />
                    <TextView
                            android:text="31:35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView11"/>
                    <TextView
                            android:text="5,8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView12"/>
                    <TextView
                            android:text="Letná"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView13"/>
                    <TextView
                            android:text="6:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView14"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
