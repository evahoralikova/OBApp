<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity_denik">

    <ScrollView
            android:layout_width="369dp"
            android:layout_height="match_parent" android:layout_weight="1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Tréninkový deník"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="33dp"
                    tools:layout_editor_absoluteX="61dp"
                    android:id="@+id/textView_headline"

                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_orange_dark" android:fontFamily="monospace"
                    android:textSize="36sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_denik"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:textSize="14sp"/>
            <Button
                    android:layout_width="345dp"
                    android:layout_height="wrap_content" android:id="@+id/buttonAddTraining" android:layout_weight="1"
                    android:text="Přidat trénink" android:textAlignment="center" android:fontFamily="monospace"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView16" android:layout_weight="1"/>
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/denikTableLayout">

                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView
                            android:text="datum"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content" android:id="@+id/textView9"
                            android:textAlignment="textStart" android:fontFamily="monospace" android:textSize="18sp"/>
                    <TextView
                            android:text="čas"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content" android:id="@+id/textView3"
                            android:textAlignment="textStart" android:fontFamily="monospace" android:textSize="18sp"/>
                    <TextView
                            android:text="délka"
                            android:layout_width="63dp"
                            android:layout_height="wrap_content" android:id="@+id/textView6"
                            android:textAlignment="textStart" android:fontFamily="monospace" android:textSize="18sp"/>
                    <TextView
                            android:text="místo"
                            android:layout_width="99dp"
                            android:layout_height="wrap_content" android:id="@+id/textView7"
                            android:textAlignment="textStart" android:fontFamily="monospace" android:textSize="18sp"/>
                    <TextView
                            android:text="tempo"
                            android:layout_width="121dp"
                            android:layout_height="match_parent" android:id="@+id/textView8"
                            android:textAlignment="textStart" android:fontFamily="monospace" android:textSize="18sp"/>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView
                            android:text="12.4."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView10"
                    />
                    <TextView
                            android:text="31:35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView11"/>
                    <TextView
                            android:text="5,8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView12"/>
                    <TextView
                            android:text="Letná"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView13"/>
                    <TextView
                            android:text="6:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView14"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
